
<div class="ui grid">
  <div class="ui four wide column"></div>

  <div class="ui five wide column">
    <h2>Musicians:</h2>
    <div class="ui list">
      <% @users.each do |user| %>
        <div class="ui list"><%= link_to user.name, user_path(user) %> - 
              <%= user.instruments.map{|i|i.name}.join(', ') %></div>
      <% end %>
    </div>
  </div>

  <div class="ui five wide column">
    <div class="ui grid">
      <div class="ui eight wide column">
      <br>
      <h4>Instrument Search:</h4>
        <div class="ui form">
          <br>
          <%= form_with url: instruments_path do |f|%>
            <%= f.submit "Submit search"%><br><br>
            <%= f.collection_select :instrument_ids, Instrument.sort_by_name, :id, :name %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
  
</div>