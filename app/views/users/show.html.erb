<div class="ui grid" >

    <div class="four wide column">
        
        <h4>Contact info:</h4>
        
        <p> Email: <%= mail_to @user.email%> </p>
        <p> Phone: <%= @user.phone%> </p>

        <h4> Instrument(s): </h4>
        <ul>
        <% @user.instruments.each do |inst| %>
            <li><%= inst.name%></li>
        <% end %>
        </ul>

        <h4> Genre(s): </h4>
        <ul>
        <% @user.genres.each do |gen| %>
            <li><%= gen.name%></li>
        <% end %>
        </ul>
        
    </div>

    <div class="seven wide column">
    
        <h2><%= @user.name%> </h2>

        <iframe width="420" height="315">
        <%# src=<%= @user.video %> 
        </iframe>

        <h4> Bio: </h4><p> <%= @user.bio %> </p>
    
    </div>

    <div class="five wide column">
      <h3> My Jams:</h3>
      <ul>
      <% current_user.jams.each do |jam| %>
        <li>
          <%= link_to jam.name, jam%> - host: <%= User.find(jam.host_id).name %>

          <% if jam.show_invite?(current_user, @user)%>
            <%= button_to "Invite #{@user.name}", action: "send_invite", data: {user_id: @user, jam_id: jam}%>
          <% end %>

          <% if jam.status(current_user) == 'request'%>
              - Pending request
          <% end %>

          <%# if %>

        </li>
      <% end %>
      </ul>
    </div>
</div>


